<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" package="com.timeInc.ark.issue">
	<class name="IssueMeta" table="issue_meta">
		<id name="id" type="java.lang.Integer">
			<column name="Id" />
			<generator class="identity" />
		</id>

		<many-to-one name="application" class="com.timeInc.ark.application.Application" fetch="join">
			<column name="ApplicationId" not-null="true" />
		</many-to-one>

		<many-to-one name="issue" class="Issue" fetch="join">
			<column name="IssueId" not-null="true" />
		</many-to-one>

		<many-to-one name="payment" class="PaymentType" fetch="join">
			<column name="PaymentId" not-null="true" />
		</many-to-one>

		<property name="size" type="java.lang.Double" column="Size" not-null="false" />
		<property name="contentUploaded" type="boolean" column="ContentUploaded" />
		<property name="previewUploaded" type="boolean" column="PreviewUploaded" />
		<property name="publishedDate" type="timestamp" column="Published_Date" />

		<property name="onSaleDate" type="timestamp" column="OnSale_Date" length="10" not-null="true" />
		<property name="price" type="big_decimal" column="Price" />
		<property name="volume" type="string" column="Volume" length="100" />
		<property name="referenceId" type="string" column="ReferenceId" length="100" />
		<property name="active" type="boolean" column="Active" />

		<one-to-one name="folio" class="Folio" property-ref="meta" cascade="all-delete-orphan" />

	</class>
</hibernate-mapping>
